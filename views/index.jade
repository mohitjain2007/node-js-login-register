extends layout

block content

  if authorised
    p Welcome #{fname} | 
      a(href="/profile") Profile | 
      a(href="/exit") Log Out
    if typeof users != 'undefined'
    p User list
    ul
      each user in users
        li= user.user_fname + " " +user.user_email + " " +user.status
  else
    p Don't have an account yet? 
      a(href='/register') Register
    p Already have an account? 
      a(href='/login') Login